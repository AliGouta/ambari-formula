  "blueprint": "{{ hdpconfig.blueprint.clustername }}",
  "default_password": "admin",
  "host_groups": [
    {% for hostgroup in hdpconfig['hostgroups'].iteritems() %}{
      {{ hostgroup }}
    }{% if not loop.last %},
    {% endif %}{% endfor %}
  ]
}